{
  "name": "erp-supermarket",
  "version": "1.0.0",
  "description": "ERP para gerenciamento de supermercados com TypeScript e Fastify",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "prisma:studio": "npx prisma studio --port 5555",
    "prisma:sync": "npx prisma db pull && npx prisma generate",
    "prisma:migrate": "npm run prisma:sync && npx prisma migrate dev --name",
    "db:clear": "npx ts-node scripts/clearDatabase.ts",
    "db:seed": "npx ts-node scripts/seedDatabase.ts",
    "swagger": "open http://localhost:3000/docs"
  },
  "keywords": [
    "erp",
    "supermarket",
    "typescript",
    "fastify",
    "prisma"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/swagger": "^8.12.1",
    "@fastify/swagger-ui": "^2.1.0",
    "@prisma/client": "^5.7.1",
    "argon2": "^0.44.0",
    "fastify": "^4.25.2",
    "jsonwebtoken": "^9.0.2",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "prisma": "^5.7.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
